// Zed keymap
//
// For information on binding keys, see the Zed
// documentation: https://zed.dev/docs/key-bindings
//
// To see the default key bindings run `zed: open default keymap`
// from the command palette.
[
  {
    "context": "Workspace",
    "bindings": {
      "ctrl-shift-tab": "pane::ActivatePreviousItem",
      "ctrl-tab": "pane::ActivateNextItem",
    },
  },
  {
    "context": "Workspace",
    "bindings": {
      "ctrl-w": "workspace::CloseWindow",
    },
  },
  {
    "context": "ProjectPanel || GitPanel || OutlinePanel",
    "bindings": {
      "ctrl-w": null,
    },
  },
  {
    "context": "Workspace",
    "bindings": {
      "ctrl-alt-b": "outline_panel::ToggleFocus",
    },
  },
  {
    "context": "Workspace",
    "bindings": {
      "ctrl-shift-b": "workspace::ToggleRightDock",
    },
  },
  {
    "context": "!ContextEditor > (Editor && mode == full)",
    "bindings": {
      "ctrl-alt-i": "assistant::InlineAssist",
    },
  },
  {
    "context": "!ContextEditor > (Editor && mode == full)",
    "bindings": {
      "ctrl-enter": "editor::NewlineBelow",
    },
  },
  {
    "context": "Editor",
    "bindings": {
      "ctrl-enter": "editor::NewlineBelow",
    },
  },
  {
    "context": "(Editor && mode == auto_height)",
    "bindings": {
      "ctrl-shift-enter": "editor::NewlineAbove",
    },
  },
  {
    "context": "Editor",
    "bindings": {
      "ctrl-shift-enter": "editor::NewlineAbove",
    },
  },
  {
    "context": "Editor",
    "bindings": {
      "alt-right": [
        "editor::MoveToEndOfLine",
        {
          "stop_at_soft_wraps": true,
        },
      ],
    },
  },
  {
    "context": "Editor",
    "bindings": {
      "alt-left": [
        "editor::MoveToBeginningOfLine",
        {
          "stop_at_soft_wraps": true,
          "stop_at_indent": true,
        },
      ],
    },
  },
  {
    "context": "(Editor && edit_prediction)",
    "bindings": {
      "alt-l": null,
    },
  },
  {
    "context": "(Editor && edit_prediction_conflict)",
    "bindings": {
      "alt-l": null,
    },
  },
  {
    "context": "(Editor && edit_prediction)",
    "bindings": {
      "alt-tab": null,
    },
  },
  {
    "context": "(Editor && edit_prediction_conflict)",
    "bindings": {
      "tab": "editor::AcceptEditPrediction",
    },
  },
  {
    "context": "(Editor && edit_prediction_conflict)",
    "bindings": {
      "alt-tab": null,
    },
  },
  {
    "context": "(Editor && edit_prediction)",
    "bindings": {
      "ctrl-down": "editor::AcceptNextLineEditPrediction",
    },
  },
  {
    "context": "(Editor && edit_prediction_conflict)",
    "bindings": {
      "ctrl-down": "editor::AcceptNextLineEditPrediction",
    },
  },
  {
    "context": "Editor",
    "bindings": {
      "ctrl-r": "editor::Rename",
    },
  },
  {
    "context": "ProjectPanel",
    "bindings": {
      "ctrl-r": "project_panel::Rename",
    },
  },
  {
    "context": "Editor",
    "bindings": {
      "ctrl-alt-down": "editor::DuplicateLineDown",
    },
  },
  {
    "context": "Editor",
    "bindings": {
      "ctrl-alt-up": "editor::DuplicateLineUp",
    },
  },
  {
    "context": "Pane",
    "bindings": {
      "ctrl-alt-_": "workspace::DecreaseOpenDocksSize",
    },
  },
  {
    "context": "Workspace",
    "bindings": {
      "ctrl-alt--": null,
    },
  },
  {
    "context": "Pane",
    "bindings": {
      "ctrl-alt-=": "pane::GoForward",
    },
  },
]
